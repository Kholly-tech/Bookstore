@page
@model Bookstore.Pages.Books.AddBookModel
@{
}

<br/>

<h2 class="text-primary">Add New Book</h2>
<br />

<div class="container border col-12 rounded" style="padding:30px;">
    <form method="post" enctype="multipart/form-data">
        <div class="text-danger offset-3" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.BookTitle"></label></b>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="BookCreate.BookTitle" /> <br />
            </div>
            <span asp-validation-for="BookCreate.BookTitle" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.AuthorName"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="BookCreate.AuthorName" class="form-control" /> <br />
                <span asp-validation-for="BookCreate.AuthorName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.BookDescription"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="BookCreate.BookDescription" class="form-control" /> <br />
                <span asp-validation-for="BookCreate.BookDescription"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.BookPrice"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="BookCreate.BookPrice" class="form-control" /> <br />
                <span asp-validation-for="BookCreate.BookPrice"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.Pages"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="BookCreate.Pages" class="form-control" /> <br />
                <span asp-validation-for="BookCreate.Pages"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="BookCreate.BookPhoto"></label></b>
            </div>
            <div class="col-6">
                <input  asp-for="BookCreate.BookPhoto" class="form-control" /> <br />
                <span asp-validation-for="BookCreate.Pages"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Add Book" class="btn btn-success form-control" /> <br />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-danger form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>
