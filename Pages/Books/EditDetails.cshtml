@page
@model Bookstore.Pages.Books.EditDetailsModel
@{
}

<br />
<h2 class="text-primary">Edit Book Details</h2>
<br />

<div class="container border rounded-4 col-12" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Books.Id" class="form-control" />
        <div class="text-danger offset-3" asp-validation-summary="ModelOnly"></div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="Books.BookTitle"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="Books.BookTitle" class="form-control" /> <br />
            </div>
            <span class="text-danger" asp-validation-for="Books.BookTitle"></span>
        </div>
            
        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="Books.AuthorName"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="Books.AuthorName" class="form-control" /> <br />
            </div>
            <span class="text-danger" asp-validation-for="Books.AuthorName"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="Books.BookDescription"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="Books.BookDescription" class="form-control" /> <br />
            </div>
            <span class="text-danger" asp-validation-for="Books.BookDescription"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="Books.BookPrice"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="Books.BookPrice" class="form-control" /> <br />
            </div>
            <span class="text-danger" asp-validation-for="Books.BookPrice"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <b><label asp-for="Books.Pages"></label></b>
            </div>
            <div class="col-6">
                <input asp-for="Books.Pages" class="form-control" /> <br />
            </div>
            <span class="text-danger" asp-validation-for="Books.Pages"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-danger form-control">Back</a>
            </div>
        </div>
    </form>
</div>