@page
@model Bookstore.Pages.Books.IndexModel
@{
}

<div class="container dark row">
    <div class="col-9">
        <h3 class="text-primary">List of Books</h3>
    </div>
	<div class="col-3">
        <a class="btn btn-primary form-control text-white" asp-page="AddBook">Add New Book</a>
    </div>
</div>

<div class="border col-12 p-3 m-4">
    <form method="post">
        @if (Model.Books.Count() > 0)
        {
            int no = 1;
            <table class="table-bordered table table-striped">
                <tr class="table-secondary">
                    <th>S/N</th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().BookTitle"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().AuthorName"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().BookDescription"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().BookPrice"></label>
                    </th>
                    <th>
                        <label asp-for="Books.FirstOrDefault().Pages"></label>
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
                @foreach(var item in Model.Books)
                {
                    <tr>
                        <td>@no</td>

                        <td>@Html.DisplayFor(m=> item.BookTitle)</td>
                    
                        <td>@Html.DisplayFor(m=>item.AuthorName)</td>
                    
                        <td>@Html.DisplayFor(m=>item.BookDescription)</td>
                    
                        <td>@Html.DisplayFor(m=>item.BookPrice)</td>

                        <td>@Html.DisplayFor(m => item.Pages)</td>
                    
                        <td>
                            <a class="btn btn-success text-white" asp-page="EditDetails" asp-route-id="@item.Id">Edit</a>
                            <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Do you want to delete this book??')">Delete</button>
                        </td>
                    </tr>
                    no = no + 1;
                }
            </table>
        }
        else
        {
            <h3 class="text-danger" style="text-align:center">No Book Found</h3>
        }
    </form>
</div>

