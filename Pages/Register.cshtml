<h1 class=" container col-6 text-primary justify-content-center">User Registration</h1>


<div class="container border col-6 rounded" style="padding:30px;">
<form method="post" enctype="multipart/form-data">
    <div class="text-danger offset-3" asp-validation-summary="ModelOnly"></div>

    <div class="form-group row">
        <div class="col-3">
            <b><label asp-for="users.Name"></label></b>
        </div>
        <div class="col-6">
            <input class="form-control" asp-for="users.Name" /> <br />
        </div>
        <span asp-validation-for="users.Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <b><label asp-for="users.Email"></label></b>
        </div>
        <div class="col-6">
            <input asp-for="users.Email" class="form-control" /> <br />
            <span asp-validation-for="users.Email" class="text-danger"></span>
        </div>
    </div>

    @* <div class="form-group row">
        <div class="col-3">
            <b><label asp-for="users.Gender"></label></b>
        </div>
