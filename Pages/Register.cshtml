            <input asp-for="users.Gender" type="radio" name="gender" value="Female" class="form-control" /> <br />
            <span asp-validation-for="users.Gender" class="text-danger"></span>
        </div>
    </div> *@

    <div class="form-group row">
        <div class="col-3">
            <b><label asp-for="users.Gender" class="col-form-label col-sm-2 pt-0"></label></b>
        </div>
        <div class="col-6">
            @* <select class="form-control">
                <option value="" selected>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>  *@

            <input type="text" asp-for="users.Gender" class="form-control" /> <br />

            @* <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" value="Male" checked>
                <label class="form-check-label" asp-for="users.Gender">
                    Male
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="gender" value="Female">
                <label class="form-check-label" asp-for="users.Gender">
                    Female
                </label>
            </div> *@
            <span asp-validation-for="users.Gender" class="text-danger"></span>
            </div>
    </div>

    <div class="form-group row">
        <div class="col-3">
            <b><label asp-for="users.Password"></label></b>
        </div>
        <div class="col-6">
            <input asp-for="users.Password" type="password" class="form-control" /> <br />
            <span asp-validation-for="users.Password"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-4 offset-4">
                <input type="submit" value="Register" class="btn btn-primary form-control" /> <br /><br />
        </div>
        @* <div class="col-3">
            <a asp-page="Index" class="btn btn-danger form-control">Back to List</a> <br />
        </div> *@
